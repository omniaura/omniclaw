{
  "name": "omniclaw",
  "version": "1.0.0",
  "description": "OmniClaw - Personal Claude assistant from the Omni ecosystem.",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --external @opencode-ai/sdk",
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "auth": "bun src/whatsapp-auth.ts",
    "typecheck": "bunx tsc --noEmit",
    "format": "bunx prettier --write \"src/**/*.ts\"",
    "format:check": "bunx prettier --check \"src/**/*.ts\"",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@effect/schema": "^0.75.5",
    "@slack/bolt": "^4.2.1",
    "@slack/web-api": "^7.14.1",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "cron-parser": "^5.5.0",
    "discord.js": "^14.16.0",
    "effect": "^3.19.17",
    "grammy": "^1.40.0",
    "qrcode-terminal": "^0.12.0",
    "telegramify-markdown": "^1.3.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/qrcode-terminal": "^0.12.2",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "vitest": "^2.1.8"
  },
  "overrides": {
    "rollup": "^4.59.0"
  }
}
